{
  "family": "my-application-with-security",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
  "platformVersion": "1.4.0",
  "pidMode": "task",
  "containerDefinitions": [
    {
      "name": "application",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/my-app:latest",
      "essential": true,
      "user": "1000:1000",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/my-application",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "app"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "linuxParameters": {
        "capabilities": {
          "drop": ["ALL"]
        },
        "initProcessEnabled": true,
        "readonlyRootFilesystem": true
      },
      "mountPoints": [
        {
          "sourceVolume": "tmp-volume",
          "containerPath": "/tmp",
          "readOnly": false
        }
      ],
      "ulimits": [
        {
          "name": "nofile",
          "softLimit": 65536,
          "hardLimit": 65536
        }
      ]
    },
    {
      "name": "runtime-security-sidecar",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/fargate-runtime-sidecar:latest",
      "essential": false,
      "environment": [
        {
          "name": "MONITORING_MODE",
          "value": "balanced"
        },
        {
          "name": "ALERT_THRESHOLD",
          "value": "75"
        },
        {
          "name": "LOG_GROUP_NAME",
          "value": "/ecs/fargate-runtime-security"
        },
        {
          "name": "CLOUDWATCH_NAMESPACE",
          "value": "FargateRuntimeSecurity"
        },
        {
          "name": "SNS_TOPIC_ARN",
          "value": "arn:aws:sns:REGION:ACCOUNT_ID:fargate-security-alerts"
        }
      ],
      "secrets": [
        {
          "name": "QUALYS_ACCESS_TOKEN",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:qualys-credentials:qualys_access_token::"
        },
        {
          "name": "QUALYS_POD",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:qualys-credentials:qualys_pod::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fargate-runtime-security",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "sidecar"
        }
      },
      "linuxParameters": {
        "capabilities": {
          "add": ["SYS_PTRACE"],
          "drop": ["ALL"]
        },
        "initProcessEnabled": true
      },
      "dependsOn": [
        {
          "containerName": "application",
          "condition": "START"
        }
      ],
      "startTimeout": 120,
      "stopTimeout": 30
    }
  ],
  "volumes": [
    {
      "name": "tmp-volume"
    }
  ],
  "tags": [
    {
      "key": "SecurityMonitoring",
      "value": "enabled"
    }
  ]
}
